@model Department_FunctionViewModel

<div class="row">
    <div class="container col-3">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>編號</th>
                    <th>名稱</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model.DepartmentList.Where(u => u.DepartmentId != 1))
                {
                    <tr>
                        <td>@department.ShortName</td>
                        <td>@department.Name</td>
                        <td>
                            <a onclick="getDepartmentId(@department.DepartmentId)" asp-route-id="@department.DepartmentId">選擇</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="container col-9">
        <div class="d-flex flex-wrap mb-3">
            <button class="btn btn-secondary border m-1 flex-grow-1 selectFunction" onclick="selectTable('.front')">前台</button>
            <button class="btn btn-secondary border m-1 flex-grow-1 selectFunction" onclick="selectTable('.back')">後台</button>
            <button class="btn btn-secondary border m-1 flex-grow-1 selectFunction" onclick="selectTable('.analyze')">分析</button>
            <button class="btn btn-secondary border m-1 flex-grow-1 selectFunction" onclick="selectTable('.fix')">維修</button>
        </div>
        <form method="post" asp-action="AddPermission">
            <button class="btn btn-primary border m-1 flex-grow-1" type="submit">存檔</button>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>功能名稱</th>
                        <th>啟動</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Department_FunctionList.Count; i++)
                    {
                        var item = Model.Department_FunctionList[i];
                        
                        if (item.Function.Group == POS.Utility.Enum.FunctionGroup.前台)
                        {
                            <tr class="hidden-table front">
                                <td>
                                    @item.Function.FunctionChineseName
                                    <input asp-for="@Model.Department_FunctionList[i].DepartmentId" value="@item.DepartmentId" type="hidden" />
                                    <input asp-for="@Model.Department_FunctionList[i].FunctionId" value="@item.FunctionId" type="hidden" />
                                </td>
                                <td>
                                    @Html.CheckBoxFor(u => u.Department_FunctionList[i].IsEnable)
                                </td>
                            </tr>
                        }
                        else if (item.Function.Group == POS.Utility.Enum.FunctionGroup.後台)
                        {
                            <tr class="hidden-table back">
                                <td>
                                    @item.Function.FunctionChineseName
                                    <input asp-for="@Model.Department_FunctionList[i].DepartmentId" value="@item.DepartmentId" type="hidden" />
                                    <input asp-for="@Model.Department_FunctionList[i].FunctionId" value="@item.FunctionId" type="hidden" />
                                </td>
                                <td>
                                    @Html.CheckBoxFor(u => u.Department_FunctionList[i].IsEnable)
                                </td>
                            </tr>
                        }
                        else if (item.Function.Group == POS.Utility.Enum.FunctionGroup.分析)
                        {
                            <tr class="hidden-table analyze">
                                <td>
                                    @item.Function.FunctionChineseName
                                    <input asp-for="@Model.Department_FunctionList[i].DepartmentId" value="@item.DepartmentId" type="hidden" />
                                    <input asp-for="@Model.Department_FunctionList[i].FunctionId" value="@item.FunctionId" type="hidden" />
                                </td>
                                <td>
                                    @Html.CheckBoxFor(u => u.Department_FunctionList[i].IsEnable)
                                </td>
                            </tr>
                        }
                        else if (item.Function.Group == POS.Utility.Enum.FunctionGroup.維修)
                        {
                            <tr class="hidden-table fix">
                                <td>
                                    @item.Function.FunctionChineseName
                                    <input asp-for="@Model.Department_FunctionList[i].DepartmentId" value="@item.DepartmentId" type="hidden" />
                                    <input asp-for="@Model.Department_FunctionList[i].FunctionId" value="@item.FunctionId" type="hidden" />
                                </td>
                                <td>
                                    @Html.CheckBoxFor(u => u.Department_FunctionList[i].IsEnable)
                                </td>
                            </tr>
                        }
                        else
                        {
                            <input asp-for="@Model.Department_FunctionList[i].Department" value="@item.Department" type="hidden" />
                            <input asp-for="@Model.Department_FunctionList[i].FunctionId" value="@item.FunctionId" type="hidden" />
                            <input asp-for="@Model.Department_FunctionList[i].IsEnable" value="false" type="hidden" />
                        }
                    }
                </tbody>
            </table>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/js/Setting/department_function.js"></script>
}