@model Function

<div class="container">
    <form method="post" id="departmentForm" asp-action="Index">
        <input asp-for="FunctionId" class="form-control" value="@Model.FunctionId" type="hidden" id="ModelId" />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">程式功能</h2>
                <hr />
            </div>
            <div class="d-flex flex-wrap mb-3">
                <button id="addButton" class="btn btn-secondary border m-1 flex-grow-1">新增</button>

                @if (Model.FunctionId == 0 || Model.FunctionId == null)
                {
                    <button id="editButton" class="btn btn-secondary border m-1 flex-grow-1" disabled>修改</button>
                    <button id="deleteButton" class="btn btn-secondary border m-1 flex-grow-1" disabled>刪除</button>
                }
                else
                {
                    <button id="editButton" class="btn btn-secondary border m-1 flex-grow-1">修改</button>
                    <button id="deleteButton" class="btn btn-secondary border m-1 flex-grow-1">刪除</button>
                }

                <button id="cancelButton" class="btn btn-secondary border m-1 flex-grow-1" disabled>取消</button>
                <button id="searchButton" class="btn btn-secondary border m-1 flex-grow-1">查詢</button>
                <button id="printButton" class="btn btn-secondary border m-1 flex-grow-1">列印</button>
                <button type="submit" class="btn btn-primary m-1 flex-grow-1" id="submitButton" disabled>存檔</button>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="FunctionName" class="p-0"></label>
                <input asp-for="FunctionName" class="form-control" disabled />
                <span asp-validation-for="FunctionName" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="FunctionChineseName" class="p-0"></label>
                <input asp-for="FunctionChineseName" class="form-control" disabled />
                <span asp-validation-for="FunctionChineseName" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Group" class="p-0"></label>
                <select asp-for="Group" asp-items="@Html.GetEnumSelectList<POS.Utility.Enum.FunctionGroup>();" disabled>
                    <option selected disabled>請選擇分類</option>
                </select> 
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>
<hr />
<div class="container">
    <table id="tblData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>NO</th>
                <th>功能名稱</th>
                <th>中文名稱</th>
                <th>分類</th>
                <th>操作</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/js/Setting/function.js"></script>
}